<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xtdar.app.view.fragment.MineFragment">

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center"
            android:text="我的"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_setting"
            android:src="@drawable/icon_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdd" />

    <LinearLayout
        android:layout_marginTop="40dp"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center|left">
<com.xtdar.app.view.widget.SelectableRoundedImageView
    android:id="@+id/img_avator"
    android:src="@drawable/logo"
    android:layout_width="70dp"
    android:layout_height="70dp"

    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="14sp"
    android:scaleType="centerCrop"
    app:sriv_left_bottom_corner_radius="50dip"
    app:sriv_left_top_corner_radius="50dip"
    app:sriv_right_bottom_corner_radius="50dip"
    app:sriv_right_top_corner_radius="50dip"
    app:sriv_border_width="2dip"
    app:sriv_border_color="@color/white"
    />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text"
                android:text="小泰斗"
                android:textSize="18dp"
                android:textColor="@color/appTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/update"
                android:text="查看编辑个人信息"
                android:textSize="14dp"
                android:textColor="@color/appTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/layout_favor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_home"
                android:src="@drawable/icon_favor"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_msg"
                android:src="@drawable/icon_history2"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="记录"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/img_friend"
                android:src="@drawable/icon_favor"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_below="@+id/img_friend"
                android:text="动态"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_album"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_album"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/titleBlue"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="我的相册"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_friend_condition"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_order"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/titleBlue"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="我的订单"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_visit_record"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/titleBlue"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="我的下载"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_device"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_device"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/titleBlue"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="我的设备"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>


</LinearLayout>

