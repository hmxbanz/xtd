<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xtdar.app.view.activity.LoginActivity">
    <include layout="@layout/layout_title_top" />
    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_margin="15dp"
        android:background="@drawable/bg_border"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp">
            <ImageView
                android:background="#f2f2f2"
                android:tint="#555555"
                android:padding="8dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_cellphone"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/username"
                android:padding="5dp"
                android:layout_marginLeft="60dp"
                android:hint="手机号"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>
        <View
            android:background="@color/garyLine"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp">
            <ImageView
                android:background="#f2f2f2"
                android:tint="#555555"
                android:padding="8dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_pass"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/password"
                android:padding="5dp"
                android:layout_marginLeft="60dp"
                android:hint="密码"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_search"
        android:text="@string/login_text"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        style="@style/AppButtonStyle"
        android:background="@drawable/bg_button"
        />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkbox"
                android:button="@null"
                android:buttonTint="@color/mainColorBlue"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:text="阅读并同意《用户协议》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_forget_password"
                android:gravity="right"
                android:layout_weight="1"
                android:text="忘记密码？"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/bg_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/appTextColor"
            style="@style/AppTitleStyle"
            android:gravity="center"
            android:background="#f2f2f2"
            android:text="@string/other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white"
                android:id="@+id/layout_nav"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/layout_register"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/bg_round_button"
                        android:id="@+id/nav_img_new"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_cellphone"
                        android:tint="#ff7da8"
                        />
                    <TextView
                        android:layout_below="@+id/nav_img_new"
                        android:gravity="center"
                        android:text="手机注册"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/bg_round_button"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/nav_img_hot"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/icon_wx"
                        android:tint="#ff7da8"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_below="@+id/nav_img_hot"
                        android:text="微信登录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>