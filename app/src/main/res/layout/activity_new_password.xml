<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.NewPasswordActivity">
    <include layout="@layout/layout_title_top"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:background="@drawable/bg_border"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp">
            <ImageView
                android:background="#f2f2f2"
                android:tint="#555555"
                android:padding="8dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_pass"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/password"
                android:padding="5dp"
                android:layout_marginLeft="60dp"
                android:hint="输入新密码"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>
        <View
            android:background="@color/appTextColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="2dp">
            <ImageView
                android:background="#f2f2f2"
                android:tint="#555555"
                android:padding="8dp"
                android:layout_width="50dp"
                android:src="@drawable/icon_pass"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/password_again"
                android:padding="5dp"
                android:layout_marginLeft="60dp"
                android:hint="再次输入密码"
                android:inputType="number"
                android:background="@drawable/transparent_drawable"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_new_pass"
            android:text="更改密码"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            style="@style/AppButtonStyle"
            android:background="@drawable/bg_button"
            />

    </LinearLayout>
</LinearLayout>