<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_age"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="男"
            app:kswTextOn="女"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_marry"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="未婚"
            app:kswTextOn="已婚"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />

        <!--<com.kyleduo.switchbutton.SwitchButton-->
        <!--android:id="@+id/sb_custom"-->
        <!--style="@style/SwitchButtonStyle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--app:kswBackMeasureRatio="2.2"-->
        <!--app:kswBackRadius="2dp"-->
        <!--app:kswThumbRadius="2dp"-->
        <!--app:kswTintColor="#49416E"-->
        <!--app:kswTextOff="未婚"-->
        <!--app:kswTextOn="已婚"-->
        <!--/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_age"
            android:text="选择年龄"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/AppButtonStyle"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_area"
            android:text="选择地区"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/AppButtonStyle"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_search"
        android:text="@string/btn_search_text"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        style="@style/AppButtonStyle"
        android:background="@drawable/bg_button"
        />
</LinearLayout>