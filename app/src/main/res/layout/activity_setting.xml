<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SettingActivity">
    <include layout="@layout/layout_title_top" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="关于小泰斗"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="分享小泰斗"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="接收通知推送"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_info"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswBackColor="@color/appgreen"
            app:kswTintColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="仅Wifi下载故事"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_ablum"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswBackColor="@color/appgreen"
            app:kswTintColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="清除本地缓存"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >

        <TextView
            style="@style/AppTitleStyle"
            android:gravity="center_vertical"
            android:text="用户反馈"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/icon_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/garyLine"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_line2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        style="@style/AppTitleStyle"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/red"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        style="@style/AppTitleStyle"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="小泰斗用户协议"
        android:textColor="@color/titleBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>